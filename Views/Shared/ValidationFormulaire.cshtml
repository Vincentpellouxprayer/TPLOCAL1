@model TPLOCAL1.Models.FormulaireModel

<!DOCTYPE html>

<html>
<head>
    <!--meta information de la page de validation-->
    <title>Page de validation</title>
    <!--lien vers la feuille CSS Index-->
    <link rel="stylesheet" href="~/ressources/Index.css" />
</head>
<body>
    <header>
        <!--Récupération de l'image HN dans le dossier ressources-->
        <img src="~/ressources/GroupeHN.png" class="image" alt="GroupeHN" />
        <!--Titre de la page de validation-->
        <h1>Page de validation</h1>
    </header>
    <nav>
        <ul>
            <!--Liens vers la page d'acceuil-->
            <li><a href="/Home/Index">Accueil</a></li>
            <!--Liens vers la page Liste avis-->
            <li><a href="/Home/Index/ListeAvis">Liste avis</a></li>
        </ul>
    </nav>
    <!--Affichage de texte pour prévenir l'utilisateur de la prise en compte de son formulaire-->
    <p>Votre formulaire a bien été pris en compte</p>
    <br>
    <div>
        <section>
            <!--Affichage du tableau Informations personnelles-->
            <table>
                <tr>
                    <!--Titre du tableau sur 2 colonnes-->
                    <th colspan="2" id="tt">Informations personnelles</th>
                </tr>
                <tr>
                    <td>Nom</td>
                    <!--Récupération du nom grâce au model-->
                    <td>
                        @Model.Nom
                    </td>
                </tr>
                <tr>
                    <td>Prénom</td>
                    <td>
                        <!--Récupération du prénom grâce au model-->
                        @Model.Prenom
                    </td>
                </tr>
                <tr>
                    <td>Sexe</td>
                    <!--Récupération du sexe grâce au model-->
                    <td>
                        @Model.Sexe
                    </td>
                </tr>
                <tr>
                    <td>Adresse</td>
                    <!--Récupération de l'adresse grâce au model-->
                    <td>
                        @Model.Adresse
                    </td>
                </tr>
                <tr>
                    <td>Code postal</td>
                    <!--Récupération du code postal grâce au model-->
                    <td>
                        @Model.CodePostal
                    </td>
                </tr>
                <tr>
                    <td>Ville</td>
                    <!--Récupération de la ville grâce au model-->
                    <td>
                        @Model.Ville
                    </td>
                </tr>
                <tr>
                    <td>Adresse mail</td>
                    <!--Récupération de l'adresse mail grâce au model-->
                    <td>
                        @Model.AdresseMail
                    </td>
                </tr>
            </table>
            <br>
            <!--Affichage du tableau Informations formation suivie-->
            <table>
                <tr>
                    <!--Titre du tableau sur 2 colonnes-->
                    <th colspan="2" id="tt">Informations formation suivie</th>
                </tr>
                <tr>
                    <td>Date début formation</td>
                    <!--Récupération de la date de début de formation grâce au model-->
                    <td>
                        @Html.DisplayFor(model => model.DateDebutFormation)
                    </td>
                </tr>
                <tr>
                    <td>Type de formation</td>
                    <!--Récupération du type de formation suivie grâce au model-->
                    <td>
                        @Model.TypeFormation
                    </td>
                </tr>
            </table>
            <br>
            <!--Affichage du tableau Avis sur la formation-->
            <table>
                <tr>
                    <!--Titre du tableau sur 2 colonnes-->
                    <th colspan="2" id="tt">Avis sur la formation</th>
                </tr>
                <tr>
                    <td>Formation Cobol</td>
                    <!--Récupération de l'avis sur la formation Cobol grâce au model-->
                    <td>
                        @Model.FormationCobol
                    </td>
                </tr>
                <tr>
                    <td>Formation Objet</td>
                    <!--Récupération de l'avis sur la formation Objet grâce au model-->
                    <td>
                        @Model.FormationObjet
                    </td>
                </tr>
            </table>
        </section>
    </div>
</body>
    </html>
