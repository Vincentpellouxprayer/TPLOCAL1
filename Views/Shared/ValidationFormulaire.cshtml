@model TPLOCAL1.Models.FormulaireModel

<!DOCTYPE html>

<html>
<head>
    <title>Page de validation</title>
</head>
<body>
    <header>
        <img src="~/ressources/GroupeHN.png" class="image" alt="GroupeHN" />
        <h1>Page de validation</h1>
    </header>
    <nav>
        <ul>
            <li><a href="/Home/Index">Accueil</a></li>
            <li><a href="/Home/Index/ListeAvis">Liste avis</a></li>
        </ul>
    </nav>
    <p>Votre formulaire a bien été pris en compte</p>
    <div>
        <section>
            <table>
                <tr>
                    <th colspan="2" id="tt">Informations personnelles</th>
                </tr>
                <tr>
                    <td>Nom</td>
                    <td>
                       @Html.DisplayFor(model => model.Nom)
                    </td>
                </tr>
                <tr>
                    <td>Prénom</td>
                    <td>
                        @Html.DisplayFor(model => model.Prenom)
                    </td>
                </tr>
                <tr>
                    <td>Sexe</td>
                    <td>
                        @Html.DisplayFor(model => model.Sexe)
                    </td>
                </tr>
                <tr>
                    <td>Adresse</td>
                    <td>
                        @Html.DisplayFor(model => model.Adresse)
                    </td>
                </tr>
                <tr>
                    <td>Code postal</td>
                    <td>
                        @Html.DisplayFor(model => model.CodePostal)
                    </td>
                </tr>
                <tr>
                    <td>Ville</td>
                    <td>
                        @Html.DisplayFor(model => model.Ville)
                    </td>
                </tr>
                <tr>
                    <td>Adresse mail</td>
                    <td>
                        @Html.DisplayFor(model => model.AdresseMail)
                    </td>
                </tr>
            </table>
            <table>
                <tr>
                    <th colspan="2" id="tt">Informations formation suivie</th>
                </tr>
                <tr>
                    <td>Date début formation</td>
                    <td>
                        @Html.DisplayFor(model => model.DateDebutFormation)
                    </td>
                </tr>
                <tr>
                    <td>Type de formation</td>
                    <td>
                        @Html.DisplayFor(model => model.TypeFormation)
                    </td>
                </tr>
            </table>
            <table>
                <tr>
                    <th colspan="2" id="tt">Avis sur la formation</th>
                </tr>
                <tr>
                    <td>Formation Cobol</td>
                    <td>
                        @Html.DisplayFor(model => model.FormationCobol)
                    </td>
                </tr>
                <tr>
                    <td>Formation Objet</td>
                    <td>
                        @Html.DisplayFor(model => model.FormationObjet)
                    </td>
                </tr>
            </table>
        </section>
    </div>
</body>
</html>
