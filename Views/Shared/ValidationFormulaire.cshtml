@model TPLOCAL1.Models.FormulaireModel
@{ 
    ViewData["Title"] = "ValidationFormulaire";
}

<!DOCTYPE html>

<html>
<head>
    <title>Page de validation</title>
    <link rel="stylesheet" href="~/ressources/Index.css" />
</head>
<body>
    <header>
        <img src="~/ressources/GroupeHN.png" class="image" alt="GroupeHN" />
        <h1>Page de validation</h1>
    </header>
    <nav>
        <ul>
            <li><a href="/Home/Index">Accueil</a></li>
            <li><a href="/Home/Index/ListeAvis">Liste avis</a></li>
        </ul>
    </nav>
    <p>Votre formulaire a bien été pris en compte</p>
    <br>
    <div>
        <section>
            <table>
                <tr>
                    <th colspan="2" id="tt">Informations personnelles</th>
                </tr>
                <tr>
                    <td>Nom</td>
                    <td>
                        @Model.Nom
                    </td>
                </tr>
                <tr>
                    <td>Prénom</td>
                    <td>
                        @Model.Prenom
                    </td>
                </tr>
                <tr>
                    <td>Sexe</td>
                    <td>
                        @Model.Sexe
                    </td>
                </tr>
                <tr>
                    <td>Adresse</td>
                    <td>
                        @Model.Adresse
                    </td>
                </tr>
                <tr>
                    <td>Code postal</td>
                    <td>
                        @Model.CodePostal
                    </td>
                </tr>
                <tr>
                    <td>Ville</td>
                    <td>
                        @Model.Ville
                    </td>
                </tr>
                <tr>
                    <td>Adresse mail</td>
                    <td>
                        @Model.AdresseMail
                    </td>
                </tr>
            </table>
            <br>
            <table>
                <tr>
                    <th colspan="2" id="tt">Informations formation suivie</th>
                </tr>
                <tr>
                    <td>Date début formation</td>
                    <td>
                        @Model.DateDebutFormation
                    </td>
                </tr>
                <tr>
                    <td>Type de formation</td>
                    <td>
                        @Model.TypeFormation
                    </td>
                </tr>
            </table>
            <br>
            <table>
                <tr>
                    <th colspan="2" id="tt">Avis sur la formation</th>
                </tr>
                <tr>
                    <td>Formation Cobol</td>
                    <td>
                        @Model.FormationCobol
                    </td>
                </tr>
                <tr>
                    <td>Formation Objet</td>
                    <td>
                        @Model.FormationObjet
                    </td>
                </tr>
            </table>
        </section>
    </div>
</body>
</html>
