@model TPLOCAL1.Models.FormulaireModel

<!DOCTYPE html>

<html>
<head>
    <title>Formulaire</title>
    <link rel="stylesheet" href="~/ressources/Index.css" />
</head>
<body>
    <header>
        <img src="~/ressources/GroupeHN.png" class="image" alt="GroupeHN" />
        <h1>Formulaire TP HN avis</h1>
    </header>
    <nav>
        <ul>
            <li><a href="/Home/Index">Accueil</a></li>
            <li><a href="/Home/Index/ListeAvis">Liste avis</a></li>
        </ul>
    </nav>
    <form action="/Home/ValidationFormulaire" method="post">
        <section>
            <!--Création du tableau Informations personnelles-->
            <table>
                <tr>
                    <th colspan="2" id="tt">Informations personnelles</th>
                </tr>
                <tr>
                    <td>Nom</td>
                    <td>
                        <!--<form>-->
                            <input type="text" id="Nom" name="Nom" class="form-control" />
                            @Html.ValidationMessageFor(model => model.Nom)
                        <!--</form>-->
                    </td>
                </tr>
                <tr>
                    <td>Prénom</td>
                    <td>
                        <!--<form>-->
                            <input type="text" id="Prenom" name="Prenom">
                            @Html.ValidationMessageFor(model => model.Prenom)
                        <!--</form>-->
                    </td>
                </tr>
                <tr>
                    <td>Sexe</td>
                    <!--Liste déroulante pour le sexe-->
                    <td>
                        <select name="Sexe">
                            <option value="">Sélectionner un sexe</option>
                            <option value="Homme">Homme</option>
                            <option value="Femme">Femme</option>
                            <option value="Autre">Autre</option>
                        </select>
                        @Html.ValidationMessageFor(model => model.Sexe)
                    </td>
                </tr>
                <tr>
                    <td>Adresse</td>
                    <td>
                        <input type="text" name="Adresse">
                        @Html.ValidationMessageFor(model => model.Adresse)
                    </td>
                </tr>
                <tr>
                    <td>Code postal</td>
                    <td>
                        <input type="number" name="CodePostal">
                        @Html.ValidationMessageFor(model => model.CodePostal)
                    </td>
                </tr>
                <tr>
                    <td>Ville</td>
                    <td>
                        <input type="text" name="Ville">
                        @Html.ValidationMessageFor(model => model.Ville)
                    </td>
                </tr>
                <tr>
                    <td>Adresse mail</td>
                    <td>
                        <input type="text" name="AdresseMail">
                        @Html.ValidationMessageFor(model => model.AdresseMail)
                    </td>
                </tr>
            </table>
            <!--Création du tableau Informations formation suivie-->
            <table>
                <tr>
                    <th colspan="2" id="tt">Informations formation suivie</th>
                </tr>
                <tr>
                    <td>Date début formation</td>
                    <td>
                        <input type="date" name="DateDebutFormation" max="01/01/2021">
                        @Html.ValidationMessageFor(model => model.DateDebutFormation)
                    </td>
                </tr>
                <tr>
                    <td>Type de formation</td>
                    <td>
                        <!--Liste déroulante pour la formation-->
                        <select name="TypeFormation">
                            <option value="">Sélectionner une formation</option>
                            <option value="Formation Cobol">Formation Cobol</option>
                            <option value="Formation objet">Formation objet</option>
                            <option value="Formation double compétence">Formation double compétence</option>
                        </select>
                        @Html.ValidationMessageFor(model => model.TypeFormation)
                    </td>
                </tr>
            </table>
            <!--Création du tableau Avis sur la formation-->
            <table>
                <tr>
                    <th colspan="2" id="tt">Avis sur la formation</th>
                </tr>
                <tr>
                    <td>Formation Cobol</td>
                    <td>
                        <input type="text" name="FormationCobol">
                        @Html.ValidationMessageFor(model => model.FormationCobol)
                    </td>
                </tr>
                <tr>
                    <td>Formation Objet</td>
                    <td>
                        <input type="text" name="FormationObjet">
                        @Html.ValidationMessageFor(model => model.FormationObjet)
                    </td>
                </tr>
            </table>
                <!--appel à la méthode ValidationFormulaire du HomeController-->
                <!--<form action="/Home/ValidationFormulaire" method="post">-->
                <input type="submit" value="Valider">
                <!--</form>-->
        </section>
    </form>
</body>
</html>
