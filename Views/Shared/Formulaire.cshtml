@model TPLOCAL1.Models.FormulaireModel

<!DOCTYPE html>

<html>
<head>
    <title>Formulaire</title>
    <link rel="stylesheet" href="~/ressources/Index.css" />
</head>
<body>
    <header>
        <img src="~/ressources/GroupeHN.png" class="image" alt="GroupeHN" />
        <h1>Formulaire TP HN avis</h1>
    </header>
    <nav>
        <ul>
            <li><a href="/Home/Index">Accueil</a></li>
            <li><a href="/Home/Index/ListeAvis">Liste avis</a></li>
        </ul>
    </nav>
    <form action="/Home/ValidationFormulaire" method="post">
        <section>
            <!--Création du tableau Informations personnelles-->
            <table>
                <tr>
                    <th colspan="2" id="tt">Informations personnelles</th>
                </tr>
                <tr>
                    <td>Nom</td>
                    <td>
                        <!--<form>-->
                        <div>
                            <input type="text" id="Nom" name="Nom" class="form-control" />
                            <span asp-validation-for="Nom" class="text-danger"></span>
                        </div>
                        <!--</form>-->
                    </td>
                </tr>
                <tr>
                    <td>Prénom</td>
                    <td>
                        <!--<form>-->
                        <div class="form-group">
                            <input type="text" id="Prenom" name="Prenom">
                            <span asp-validation-for="Prenom" class="text-danger"></span>
                        </div>
                        <!--</form>-->
                    </td>
                </tr>
                <tr>
                    <td>Sexe</td>
                    <!--Liste déroulante sur les genres-->
                    <td>
                        <div class="/Models/FormulaireModel">
                            <!--<form>-->
                            <select id="genre" name="genre">
                                <option value="Sélectionner un sexe" selected>Sélectionner un sexe</option>
                                <option value="Homme">Homme</option>
                                <option value="Femme">Femme</option>
                                <option value="Autre">Autre</option>
                            </select>
                        </div>
                        <!--</form>-->
                    </td>
                </tr>
                <tr>
                    <td>Adresse</td>
                    <td>
                        <!--<form>-->
                        <div class="/Models/FormulaireModel">
                            <input asp-for="Adresse" class="form-control" />
                            <span asp-validation-for="Adresse" class="text-danger"></span>
                        </div>
                        <!--</form>-->
                    </td>
                </tr>
                <tr>
                    <td>Code postal</td>
                    <td>
                        <!--<form>-->
                        <div class="/Models/FormulaireModel">
                            <input type="number" id="CodePostal" name="CodePostal">
                            <span asp-validation-for="CodePostal" class="text-danger"></span>
                        </div>
                        <!--</form>-->
                    </td>
                </tr>
                <tr>
                    <td>Ville</td>
                    <td>
                        <div class="/Models/FormulaireModel">
                            <!--<form>-->
                            <input type="text" id="Ville" name="Ville">
                        </div>
                        <!--</form>-->
                    </td>
                </tr>
                <tr>
                    <td>Adresse mail</td>
                    <td>
                        <!--<form>-->
                        <div class="/Models/FormulaireModel">
                            <label asp-for="AdresseMail" class="control-label"></label>
                            <input asp-for="AdresseMail" class="form-control" />
                            <span asp-validation-for="AdresseMail" class="text-danger"></span>
                        </div>
                        <!--</form>-->
                    </td>
                </tr>
            </table>
            <!--Création du tableau Informations formation suivie-->
            <table>
                <tr>
                    <th colspan="2" id="tt">Informations formation suivie</th>
                </tr>
                <tr>
                    <td>Date début formation</td>
                    <td>
                        <!--<form>-->
                        <div class="/Models/FormulaireModel">
                            <input type="date" max="01-01-2021">
                            <!--</form>-->
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>Type de formation</td>
                    <td>
                        <!--Liste déroulante sur les formation-->
                        <!--<form>-->
                        <select id="formation" name="formation">
                            <option value="Sélectionner une formation" selected>Sélectionner une formation</option>
                            <option value="Formation Cobol">Formation Cobol</option>
                            <option value="Formation objet">Formation objet</option>
                            <option value="Formation double compétence">Formation double compétence</option>
                        </select>
                        <!--</form>-->
                    </td>
                </tr>
            </table>
            <!--Création du tableau Avis sur la formation-->
            <table>
                <tr>
                    <th colspan="2" id="tt">Avis sur la formation</th>
                </tr>
                <tr>
                    <td>Formation Cobol</td>
                    <td>
                        <!--<form>-->
                        <div class="form-group">
                            <label asp-for="FormationCobol" class="control-label"></label>
                            <input asp-for="FormationCobol" class="form-control" />
                            <span asp-validation-for="FormationCobol" class="text-danger"></span>
                        </div>
                        <!--</form>-->
                    </td>
                </tr>
                <tr>
                    <td>Formation Objet</td>
                    <td>
                        <!--<form>-->
                        <div class="form-group">
                            <label asp-for="FormationObjet" class="control-label"></label>
                            <input asp-for="FormationObjet" class="form-control" />
                            <span asp-validation-for="FormationObjet" class="text-danger"></span>
                        </div>
                        <!--</form>-->
                    </td>
                </tr>
            </table>
            <div class="form-group">
                <!--appel à la méthode ValidationFormulaire du HomeController-->
                <!--<form action="/Home/ValidationFormulaire" method="post">-->
                <input type="submit" value="Valider">
                <!--</form>-->
            </div>
        </section>
    </form>
</body>
</html>
